# ===== Source (LOCAL: src-mysql) =====
SRC_DB_HOST=src-mysql
SRC_DB_PORT=3306
SRC_DB_USER=root
SRC_DB_PASSWORD=srcpassword
SRC_DB_NAME=mydb

# ===== Target (LOCAL: tgt-mysql) =====
TGT_DB_HOST=tgt-mysql
TGT_DB_PORT=3306
TGT_DB_USER=root
TGT_DB_PASSWORD=tgtpassword
TGT_DB_NAME=mydb

# ===== S3 (LOCAL: MinIO) =====
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=my-mysql-backups
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin

# ===== Scheduling (CRON expressions) =====
CRON_BACKUP=*/10 * * * *       # every 10 minutes (for local testing)
CRON_RESTORE=*/15 * * * *      # every 15 minutes
TZ=UTC

# ===== Notifications (Slack Incoming Webhook) =====
# For local tests you can leave it blank; messages will be logged.
SLACK_WEBHOOK_URL=

# ===== Behavior Flags =====
VERIFY_AFTER_RESTORE=true
KEEP_LOCAL_WORKDIR=false
